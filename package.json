{
  "name": "react_ssr",
  "sideEffects": false,
  "version": "1.0.0",
  "description": "Basic SSR With React",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "styleguide": "npx styleguidist server",
    "test": "jest --no-cache",
    "watch-frontend": "webpack --watch --config webpack.dev.js",
    "watch-server": "webpack --watch --config webpack.server.js",
    "build-server": "webpack --config webpack.server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tslint --config ./tslint.json --project ./tsconfig.json && yarn prettier --config ./.prettierrc --write",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx|js)"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "awesome-typescript-loader": "^5.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "enzyme-adapter-react-16": "^1.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "prettier": "1.13.7",
    "react-docgen-typescript": "^1.6.2",
    "react-styleguidist": "^7.1.0",
    "react-test-renderer": "^16.4.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.9",
    "@types/react-router": "^4.0.31",
    "@types/react-router-config": "^1.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.6",
    "axios": "^0.18.0",
    "enzyme": "^3.3.0",
    "enzyme-to-json": "^3.3.4",
    "express": "^4.16.3",
    "express-http-proxy": "^1.4.0",
    "javascript-serialize": "^1.6.1",
    "nodemon-webpack-plugin": "^4.0.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.6",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.3.0",
    "typesafe-actions": "^2.0.4"
  }
}
